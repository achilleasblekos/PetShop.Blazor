@page "/petList"
@using PetShop.Model
@inject HttpClient httpClient

<h3>PetList</h3>

<input @bind=Breed placeholder="Breed" />
<select @bind=animalType>AnimalType</select>
<select @bind=status>PetStatus</select>
<input @bind=Cost placeholder="Cost" />
<input @bind=Price placeholder="Price" />
<label for="cars">Choose a car:</label>

